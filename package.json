{
  "name": "react-jest",
  "version": "1.0.0",
  "author": "Prasanna KC Dommalapati",
  "description": "Simple Webpack dev server, running react and tests with jest",
  "license": "MIT",
  "main": "webpack.config.js",
  "scripts": {
    "start": "webpack-dev-server --mode production --hot --open --progress --colors",
    "dev": "webpack --mode development --progress",
    "build": "webpack --mode production --progress",
    "test": "jest --no-cache",
    "test:dev": "jest --watch",
    "test:coverage": "jest --coverage",
    "add-shrinkwrap": "npm shrinkwrap -dev && git add npm-shrinkwrap.json",
    "clean_nm": "rimraf node_modules"
  },
  "jest": {
    "transform": {
      ".*": "./node_modules/jest-babel-webpack-react"
    },
    "setupFiles": [
      "./src/setupTests.js"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-7-jest": "^21.3.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel7-jest": "^1.0.1",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.0.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-babel-webpack-react": "^0.1.4",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.11.0",
    "path": "^0.12.7",
    "react-test-renderer": "^16.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  }
}
