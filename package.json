{
  "name": "react-jest",
  "version": "1.0.0",
  "author": "Prasanna KC Dommalapati",
  "description": "Simple Webpack dev server, running react and tests with jest",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode production --hot --open --progress --colors",
    "build": "webpack --mode production --progress",
    "test": "jest --no-cache --env=jsdom",
    "test:dev": "jest --watch",
    "test:coverage": "jest --coverage",
    "add-shrinkwrap": "npm shrinkwrap -dev && git add npm-shrinkwrap.json",
    "clean_nm": "rimraf node_modules",
    "json-server": "json-server --watch ./src/__data__/fakeusergenerator.js --port 5005"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      ".+\\.(css|style|less|sass|scss)$": "./node_modules/jest-css-modules-transform"
    },
    "coverageReporters": [
      "text",
      "Cobertura",
      "html"
    ],
    "moduleNameMapper": {
      "/\\.(scss|less|css)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "npm": "^6.6.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "update": "^0.7.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/helper-plugin-utils": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "axios": "^0.18.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "bootstrap": "^4.2.1",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.0.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "faker": "^4.1.0",
    "file-loader": "^3.0.1",
    "firebase": "^6.0.2",
    "formik": "^1.5.1",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^23.6.0",
    "jest-css-modules": "^1.1.0",
    "jest-css-modules-transform": "^2.1.1",
    "json-server": "^0.14.2",
    "node-sass": "^4.11.0",
    "path": "^0.12.7",
    "react-redux": "^6.0.0",
    "react-test-renderer": "^16.7.0",
    "reactstrap": "^7.0.2",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "yup": "^0.26.10"
  }
}
